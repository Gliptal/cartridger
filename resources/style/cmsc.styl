@import "common\gui"

#content > #cmsc
    position: absolute
    height  : 252px * 2
    margin  : auto 0px
    top     : 0px
    bottom  : 0px

#cmsc
    vertical-align: top
    & > *
        display : inline-block
        relative: top left
    & h1
        padding : 24px 48px 12px 48px

.cmsc_list
    height     : 192px
    width      : calc(100% - 48px)
    margin     : 0px 24px
    padding    : 0px 24px
    overflow-x : scroll
    overflow-y : hidden
    white-space: no-wrap

.cmsc_program
    display     : inline-block
    height      : 180px
    width       : 180px
    margin-right: 60px
    white-space : initial