@import "common\gui"

.mfcds_links
    display       : inline-block
    relative      : top left
    vertical-align: top
    width         : 50%
    padding-top   : 60px
    & h1
        width         : 100%
        padding-bottom: 36px
        text-align    : center
    & div
        display        : flex
        justify-content: center
        padding        : 0px 48px
        & press
            flex-basis: auto
            margin    : auto

#mfcds_pages
    width     : 100%
    margin-top: 96px
    & div
        display        : flex
        justify-content: center
        margin-bottom  : 24px
        padding        : 0px 20%
        & press
            flex-basis: auto
            margin    : auto
            &#mfcds_pages-remove
                width: 48px
                background-image: url("../../images/remove.png")
                background-position: center
                background-repeat  : no-repeat
                background-size    : 24px
