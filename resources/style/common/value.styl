@import "gui"

value
    display      : inline-block
    height       : 30px
    width        : 204px
    margin-bottom: 6px
    & > *
        display       : inline-block
        vertical-align: top
        height        : 100%
    & p
        width        : 144px
        line-height  : 30px
        padding-right: 24px
        text-align   : right
    & input
        width           : 60px
        border          : 0px
        padding         : 0px 6px
        border-bottom   : 2px solid color_accent-light
        font-size       : font_size-normal
        text-align      : center
        line-height     : 24px
        text-transform  : uppercase
        color           : font_color-light
        background-color: transparent
        cursor          : auto
        &:disabled
            border-bottom: 0px
